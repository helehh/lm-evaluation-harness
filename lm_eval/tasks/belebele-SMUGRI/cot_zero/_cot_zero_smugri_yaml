group: belebele_smugri_cot_zero

output_type: generate_until
dataset_path: "/gpfs/helios/home/kuulmets/data/belebele-smugri"
should_decontaminate: true
doc_to_decontamination_query: "{{question}}"
description: "Given a passage and a question, select the correct answer from the given choices.\n\n"
doc_to_text: "P: {{flores_passage}}\nQ: {{question.strip()}}\nOptions:\nA. {{mc_answer1}}\nB. {{mc_answer2}}\nC. {{mc_answer3}}\nD. {{mc_answer4}}\nAnswer: Let's think step by step."
doc_to_choice: ["A", "B", "C", "D"]
doc_to_target: "{{[1, 2, 3, 4].index(correct_answer_num)}}"
metric_list:
  - metric: exact_match
    aggregation: mean
    higher_is_better: true
    ignore_case: true
    ignore_punctuation: false
generation_kwargs:
  until:
    - "</s>"
    - "<|end_of_text|>"
    - "\n\n"
# Note that in zero-shot CoT setting some (base) models do not stop
# generation after the correct answer. Thus, we try to extract it 
# by look for string "Therefore, the ". It might lead to false negatives
# but it is as good as it gets.
filter_list:
  - name: "strict-match"
    filter:
      - function: "regex"
        regex_pattern: "Therefore, the .*?([ABCD])[.]"
      - function: "take_first"
